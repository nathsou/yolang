
fn isEven(n) {
  n % 2 == 0
}

fn isPrime(n) {
  if n < 2 { return false; }
  if n == 2 { return true; }
  if isEven(n) { return false; }

  mut i = 3;

  while i * i <= n {
    if n % i == 0 { return false; }
    i = i + 2;
  }

  true
}

fn countPrimesLessThan(m) {
  mut i = m;
  mut count = 0;

  while i > 1 {
    if isPrime(i) {
      count = count + 1;
    }

    i = i - 1;
  }

  count
}

fn main() {
  countPrimesLessThan(1000000)
}